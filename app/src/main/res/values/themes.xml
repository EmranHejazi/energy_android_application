<resources>
    <!-- Base application theme. -->
    <style name="Theme.Energy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customized Rules -->
        <!-- Turn off the default splash screen of Android 12+ -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Set the layout direction to right-to-left -->
        <item name="android:direction">right_to_left</item>
        <!-- Status Bar and Navigation Bar Colors -->
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <!-- Make the status bar icons light -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
