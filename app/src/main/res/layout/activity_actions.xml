<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    tools:context=".activities.ActionsActivity">

    <include layout="@layout/component_appbar" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekan_bakh_bold"
        android:text="@string/title_activity_actions"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="70sp" />

    <include layout="@layout/component_separator" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_actions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="40dp" />


</LinearLayout>